    function unfollow(userId) {
        // hacky method to submit form from JS
        if (!confirm('Are you sure you want to unfollow this user?')) {
            return;
        }

        var url = '<?= $this->url('/users') ?>' + '/' + userId + '/unfollow';
        var $form = $('<form>', {
            action: url,
            method: 'post'
        });

        $('<input>').attr({
            type: "hidden",
            name: 'ref',
            value: '/users'
        }).appendTo($form);

        $form.appendTo('body').submit();
    }

    function follow(userId) {
